<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeActivity"
    android:background="@color/gray">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.LifeInsuranceFirst"
            android:id="@+id/constraint_firstform">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အမြဲတမ်းနေထိုင်သည့် နေရပ်လိပ်စာ"
                android:id="@+id/lblpaddr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_paddr"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:hint="ဖြည့်စွက်ပါ"
                android:paddingLeft="14dp"
                app:layout_constraintTop_toBottomOf="@+id/lblpaddr"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_paddr"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="မွေးသက္ကရာဇ်"
                android:textColor="@color/colorAccent"
                android:id="@+id/lbldob"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lbldob"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/linear_dob">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/txt_fnrc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ခုနှစ်"
                        android:textAlignment="center"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/txt_snrc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="လ"
                        android:textAlignment="center"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1">
                    <TextView
                        android:id="@+id/txt_tnrc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ရက်"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_dob"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/lineardob">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/customer_bg"
                    android:padding="3dp"
                    android:layout_marginRight="5dp">
                    <Spinner
                        android:id="@+id/spn_year"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:focusableInTouchMode="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/customer_bg"
                    android:padding="3dp"
                    android:layout_marginRight="5dp">
                    <Spinner
                        android:id="@+id/spn_month"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/customer_bg"
                    android:padding="3dp">
                    <Spinner
                        android:id="@+id/spn_day"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="လာမည့်နှစ်မွေးနေ့တွင် ပြည်မည်အသက်"
                android:id="@+id/lblcommingage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineardob"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_commingage"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lblcommingage"
                android:singleLine="true"
                android:enabled="false"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="မွေးဖွားရာဒေသ"
                android:id="@+id/lblbornaddr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_commingage"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_bornaddr"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lblbornaddr"
                android:singleLine="true"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အမြဲတမ်းလစာ"
                android:id="@+id/lblsalary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_bornaddr"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_salary"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lblsalary"
                android:inputType="number"
                android:singleLine="true"
                android:hint="ဖြည့်စွက်ပါ"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အာမခံထားငွေ"
                android:id="@+id/lbl_iamount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_salary"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lbl_iamount"
                android:background="@drawable/customer_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/relative_iamount">
                <Spinner
                    android:id="@+id/spn_iamount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အာမခံထားမည့် သက်တမ်း"
                android:id="@+id/lbl_ilength"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relative_iamount"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lbl_ilength"
                android:background="@drawable/customer_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/relative_ilength">
                <Spinner
                    android:id="@+id/spn_ilength"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="ကိုယ်တွင်ထင်ရှားသောအမှတ်အသား"
                android:id="@+id/lbl_bodysign"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relative_ilength"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_bodysign"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:hint="ဖြည့်စွက်ပါ"
                app:layout_constraintTop_toBottomOf="@+id/lbl_bodysign"
                android:singleLine="true"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="အရပ်အမြင့်"
                android:id="@+id/lbl_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_bodysign"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_height"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/linear_lblfeetinch">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/txt_feet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="ပေ"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/txt_inch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginRight="5dp"
                        android:text="လက်မ"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_lblfeetinch"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/linear_height">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_bg"
                    android:layout_marginRight="5dp">
                    <Spinner
                        android:id="@+id/spn_feet"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_bg"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp">
                    <Spinner
                        android:id="@+id/spn_inch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"/>
                </RelativeLayout>




            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="ကိုယ်အလေးချိန်"
                android:id="@+id/lbl_weight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_height"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <EditText
                android:id="@+id/tie_weight"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/customer_bg"
                android:imeOptions="actionGo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_weight"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:hint="ဖြည့်စွက်ပါ"
                android:singleLine="true" />
            <Button
                android:id="@+id/btnsave_finsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/btnbgColor"
                android:text="@string/lblcontinue"
                android:textColor="@color/btnforeColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tie_weight" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>